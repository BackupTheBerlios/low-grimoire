  VERSION=( "0.4" )
 CATEGORY="utility cd"
ATTRIBUTE="console"
   SOURCE="$SPELL-$VERSION"
 HOMEPAGE="http://gregory.kokanosky.free.fr/v4/linux/nrg2iso.en.html"
      URL="http://gregory.kokanosky.free.fr/v4/linux"
#      REQ=( "" )
#FRESHMEAT=""
DESC="Nrg2Iso is a linux utils for converting CD (or DVD) image generated by Nero Burning Rom to ISO format.
Nrg2Iso is a linux utils for converting CD (or DVD) image generated by Nero
Burning Rom to ISO format.
"

build() {
  make            &&
  prepare_install &&
  install -o root -g root -m 755 nrg2iso /usr/bin
}
