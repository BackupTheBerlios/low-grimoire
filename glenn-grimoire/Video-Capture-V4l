   VERSION=( "0.222" )
  CATEGORY="development"
 ATTRIBUTE="perl library"
    SOURCE="$SPELL-$VERSION"
  HOMEPAGE="http://www.goof.com/pcg/marc/"
       URL="ftp://mirror.csit.fsu.edu/pub/CPAN/authors/id/M/ML/MLEHMANN"
       REQ="perl"
     SHORT="Perl interface to the Video4linux framegrabber interface."
LONG="
Perl interface to the Video4linux framegrabber interface.
"

build() {
(
  
  perl  Makefile.PL  &&
  make               &&
  prepare_install    &&
  make    install

) > $C_FIFO 2>&1
}

