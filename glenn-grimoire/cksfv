DESC="cksfv is a program that can use sfv files to verify and create files.
cksfv is a program that can use sfv files to verify and create files.
"

build() {
  sed -i "s:gmake:make:" Makefile  &&
  sed -i "s:local/::" src/Makefile &&
  make            &&
  prepare_install &&
  make install
}
