  VERSION=( "1.0b2" )
 CATEGORY="video-editor dvd"
ATTRIBUTE="x11"
   SOURCE="$SPELL/DVDStyler-$VERSION"
 HOMEPAGE="http://dvdstyler.sourceforge.net"
      URL="$SOURCEFORGE_URL"
      REQ="mpgtx mjpegtools dvdauthor wxGTK"
#FRESHMEAT=""
    SHORT="DVDStyler is a crossplatform GUI frontend to the dvd authoring and recording programs dvdauthor and dvdrecord."
LONG="
DVDStyler is a crossplatform GUI frontend to the dvd authoring and
recording programs dvdauthor and dvdrecord.
"

build() {
  # the install location is atrocious, fix later
  sed -i "s:/local::" Makefile &&
  make                         &&
  prepare_install              &&
  make install
}

