           MODULE=ruby-gconf
         VERSION=0.2
          SOURCE=$MODULE-$VERSION.tar.gz
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$MODULE-$VERSION
   SOURCE_URL[0]=$SFORGE_URL/ruby-gnome/$SOURCE
        WEB_SITE=http://ruby-gnome.sourceforge.net
         ENTERED=20020508
