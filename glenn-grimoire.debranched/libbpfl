  VERSION=( "0.2.0beta" )
 CATEGORY="filter"
ATTRIBUTE="library"
   SOURCE="$SPELL/$SPELL-$VERSION"
 HOMEPAGE="http://libbpfl.sourceforge.net"
      URL="$SOURCEFORGE_URL"
      REQ=""
#FRESHMEAT=""
    SHORT="The Bayesian Probability Filtering Library ( BPFL ) is a C++ library intended for creation of Bayesian Filtering Programs."
LONG="
The Bayesian Probability Filtering Library ( BPFL ) is a C++ library
intended for creation of Bayesian Filtering Programs.
"

build() {

  
  ./configure --prefix=/usr              \
              $OPTS                      &&
  make                                   &&
  prepare_install                        &&
  make install                           &&
  mkdir -p /usr/doc/$SPELL               &&
  cp -R README doc /usr/doc/$SPELL       &&
  mkdir -p /usr/share/$SPELL             &&
  cp -R tests /usr/share/$SPELL

}

