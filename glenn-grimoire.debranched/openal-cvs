inherit openal
unset URL SOURCE
  VERSION=( "cvs" )
      REQ="cvs autoconf automake"
   ASSUME="off"
  PROVIDE="openal"
#FRESHMEAT=""

build() {
(
  cd  linux                          &&
  ./autogen.sh                       &&
  ./configure  --build=$BUILD        \
               --prefix=/usr         \
               --sysconfdir=/etc     \
               --localstatedir=/var  \
               $OPTS                 &&
  make                               &&
  prepare_install                    &&
  make    install                    &&
  make  distclean                    &&
  mkdir -p /usr/doc/$BSPELL             &&
  cp doc/{EXT_vorbis,LOKI*,openal.texi,sample.openalrc} \
     ../docs/*ml /usr/doc/$BSPELL
  
) > $C_FIFO 2>&1

}

pre_build() {
default_pre_build
  CVSSERVER=':pserver:guest@opensource.creative.com:/usr/local/cvs-repository'
  MODULE=openal
  export CVS_RSH=ssh
  
  rmdir $BUILD_DIR
  
  if [ -f $SOURCE_CACHE/$BSPELL/$VERSION/$BSPELL.tar.bz2 ]; then
    unpack "$SOURCE_CACHE/$BSPELL/$VERSION/$BSPELL.tar.bz2"
  fi
  
  if [ -a $BUILD_DIR ]; then
      CVSCOMMAND="update -dP"
  else
      CVSCOMMAND="checkout $MODULE"
  fi
  
  cvs -z4 -d $CVSSERVER $CVSCOMMAND
  
  if ! [ -a $BUILD_DIR ]; then
    mv $MODULE $BUILD_DIR
  fi
}

post_install() {
default_post_install
mkdir -p $SOURCE_CACHE/$BSPELL/$VERSION &&
tar -C "$SOURCE_DIR" -cjf "$SOURCE_CACHE/$BSPELL/$VERSION/$BSPELL.tar.bz2" "$SPELL-$VERSION-$BRANCH"
}

