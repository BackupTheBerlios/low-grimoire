  VERSION=( "0.1.9" "0.1.7" )
 CATEGORY="audio-editor mp3"
ATTRIBUTE="console"
   SOURCE="$SPELL/$SPELL-$VERSION"
 HOMEPAGE="http://id3v2.sourceforge.net"
      URL="$SOURCEFORGE_URL"
      REQ="id3lib"
#FRESHMEAT=""
    SHORT="The id3v2 tagger is a GNU/Linux command-line editor for ID3v1/v2 tags."
LONG="
The id3v2 tagger is a GNU/Linux command-line editor for ID3v1/v2 tags.
"

build() {


  make clean                  &&
  make                        &&
  prepare_install             &&
  install  -o root -g root -m 755  id3v2  /usr/bin  

}
