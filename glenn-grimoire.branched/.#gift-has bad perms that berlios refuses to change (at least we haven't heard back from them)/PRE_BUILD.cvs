  CVSSERVER=':pserver:anonymous@cvs.gift.sf.net:/cvsroot/gift'

  mkdir -p /usr/src/sorcery.cvs/$SPELL/
  cd /usr/src/sorcery.cvs/$SPELL/

  if ( true ); then
      if [ -a /usr/src/sorcery.cvs/$SPELL/giFT ]; then
          CVSCOMMAND="update -dP"
