 CATEGORY="smartcard security"
ATTRIBUTE="driver"
   SOURCE="${SPELL}-$VERSION"
 HOMEPAGE="http://alioth.debian.org/projects/pcsclite"
      URL="http://alioth.debian.org/download.php/378"
