  CVSSERVER=':pserver:anonymous@cvs.gift-fasttrack.berlios.de:/cvsroot/gift-fasttrack'
  MODULE=$SPELL
  export CVS_RSH=ssh

  rmdir $BUILD_DIR
  
  if [ -f $SOURCE_CACHE/$BSPELL/$VERSION/$BSPELL.tar.bz2 ]; then
    unpack "$SOURCE_CACHE/$BSPELL/$VERSION/$BSPELL.tar.bz2"
  fi
  
  if [ -a $BUILD_DIR ]; then
      CVSCOMMAND="update -dP"
  else
      CVSCOMMAND="checkout $MODULE"
  fi
  
  cvs -z4 -d $CVSSERVER $CVSCOMMAND
  
  if ! [ -a $BUILD_DIR ]; then
    mv $MODULE $BUILD_DIR
  fi
