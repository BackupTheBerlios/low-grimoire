  cp jabber.xml /etc/$SPELL   &&
  mkdir -p  /usr/lib/$SPELL   &&
  cp jsm/jsm.so xdb_file/xdb_file.so pthsock/pthsock_client.so \
     dnsrv/dnsrv.so dialback/dialback.so /usr/lib/$SPELL &&
  mkdir -p /var/spool/$SPELL

