  unpack $( guess_filename "${SOURCE[1]}" "$SOURCE_CACHE/$BSPELL/$VERSION" ) &&
  mv $(basename ${SOURCE[1]} .tar.gz) jabberd &&
  ./configure --enable-ipv6   \
